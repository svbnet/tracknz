<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/toolbar"
        android:id="@+id/inc_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inc_toolbar">
        <fragment
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:name="co.svbnet.tracknz.fragment.PackageListFragment"
            android:id="@+id/list_fragment"
            tools:layout="@layout/fragment_package_list" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/info_fragment_container"
            android:visibility="gone">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:name="co.svbnet.tracknz.fragment.PackageInfoFragment"
                android:id="@+id/info_fragment"
                tools:layout="@layout/fragment_package_info" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/unselected_view"
            android:background="@color/selection" />
    </LinearLayout>
</RelativeLayout>